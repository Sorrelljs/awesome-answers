<h1>All Questions</h1>

<ul>
  <% @questions.each do |question| %>
    <li>
    <div>
      <%= link_to question.title, question_path(question) %>
    </div>
    <small>Asked <%= time_ago_in_words(question.created_at) %> ago</small>
    <small>Viewed <%= pluralize(question.view_count, "time") %></small>
    </li>
  <% end%>
</ul>